{
  "name": "next-js-with-unit-testing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "test:coverage": "jest --coverage --watchAll",
    "server": "json-server --watch  ./db/db.json --port 8080",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts, tsx, css, scss}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/client": "^3.7.15",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "contentful": "^10.2.3",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "flowbite": "^1.6.5",
    "flowbite-react": "^0.4.7",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "json-server": "^0.17.3",
    "next": "13.4.4",
    "node-fetch": "^3.3.1",
    "postcss": "8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest-dom": "^4.0.3",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "msw": "^1.2.1",
    "prettier": "2.8.8"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "eslint"
    ],
    "*.{ts, tsx, css,scss}": [
      "prettier"
    ]
  }
}
